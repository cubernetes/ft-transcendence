{
    "name": "ft-transcendence-backend",
    "version": "1.0.0",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "start": "tsc && node dist/index.js",
        "start:dev": "tsc && npx nodemon --watch src --ext ts --exec \"npx tsx src/index.ts\"",
        "build": "tsc && node esbuild.config.js",
        "build:dev": "tsc && node esbuild.config.js --watch",
        "db:migration": "npx drizzle-kit generate --config=./drizzle/drizzle.config.json",
        "test": "BACKEND_PORT=3000 JWT_SECRET=1234567890abcdef1234567890abcdef DB_PATH=:memory: DB_DIR=drizzle npx tap --allow-incomplete-coverage"
    },
    "dependencies": {
        "@darrenkuro/pong-core": "^1.3.16",
        "@faker-js/faker": "^9.6.0",
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^11.0.0",
        "@fastify/jwt": "^9.0.4",
        "@fastify/multipart": "^9.0.3",
        "@fastify/swagger": "^9.4.2",
        "@fastify/swagger-ui": "^5.2.2",
        "@fastify/websocket": "^11.0.2",
        "bcryptjs": "^3.0.2",
        "better-sqlite3": "^11.8.1",
        "drizzle-orm": "^0.40.0",
        "fastify": "^5.2.1",
        "fastify-plugin": "^5.0.1",
        "neverthrow": "^8.2.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "pino-socket": "^7.4.0",
        "qrcode": "^1.5.4",
        "speakeasy": "^2.0.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/bcrypt": "^5.0.2",
        "@types/better-sqlite3": "^7.6.12",
        "@types/node": "^20.17.52",
        "@types/qrcode": "^1.5.5",
        "@types/speakeasy": "^2.0.10",
        "@types/tap": "^15.0.12",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.0",
        "drizzle-kit": "^0.31.1",
        "esbuild": "^0.25.2",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "tap": "^21.1.0",
        "tsx": "^4.19.3",
        "typescript": "^5.3.3",
