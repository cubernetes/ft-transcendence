{
    "include": ["src/**/*"],
    "types": ["node", "inquirer"],
    "compilerOptions": {
        "target": "es2020",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "module": "esnext"
    }
}
